<div class="w-full max-w-md ml-7">
<h2 class="text-gray-800 font-bold p-1 text-2xl mb-4">Editar meus dados</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="mb-4"> 
      <%= f.label :full_name, class:"block text-sm text-gray-800 mb-2"%>
      <%= f.text_field :full_name, autocomplete: "full_name", class:"w-full bg-gray-50 border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 rounded px-3 py-2 text-base text-gray-800 placeholder-gray-300 focus:outline-none transition-all duration-200 ease-in-out" %>
    </div>
    <div class="mt-4">
      <%= f.label :birth_date, class:"block text-sm text-gray-800 mb-2" %>
      <%= f.date_field :birth_date, class:"w-full bg-gray-50 border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 rounded px-3 py-2 text-base text-gray-800 placeholder-gray-300 focus:outline-none transition-all duration-200 ease-in-out" %>
    </div>
    <div class="mt-4">
      <%= f.label :cpf, class:"block text-sm text-gray-800 mb-2" %>
      <%= f.text_field :cpf, autocomplete: "cpf", class:"w-full bg-gray-50 border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 rounded px-3 py-2 text-base text-gray-800 placeholder-gray-300 focus:outline-none transition-all duration-200 ease-in-out" %>
    </div>
    <div class="mt-4"> 
      <%= f.label :email, class:"block text-sm text-gray-800 mb-2"%>
      <%= f.email_field :email, autocomplete: "email", class:"w-full bg-gray-50 border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 rounded px-3 py-2 text-base text-gray-800 placeholder-gray-300 focus:outline-none transition-all duration-200 ease-in-out" %>
    </div>
    <div class="mt-4">
      <%= f.label :password, class:"block text-sm text-gray-800 mb-2" %> <i>(leave blank if you don't want to change it)</i><br />
      <%= f.password_field :password, autocomplete: "new-password", class:"w-full bg-gray-50 border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 rounded px-3 py-2 text-base text-gray-800 placeholder-gray-300 focus:outline-none transition-all duration-200 ease-in-out" %>
    </div>
    <div class="mt-4">
      <%= f.label :password_confirmation, class:"block text-sm text-gray-800 mb-2" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"w-full bg-gray-50 border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 rounded px-3 py-2 text-base text-gray-800 placeholder-gray-300 focus:outline-none transition-all duration-200 ease-in-out" %>
    </div>
    <div class="mt-4">
      <%= f.label :current_password, class:"block text-sm text-gray-800 mb-2" %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "current-password", class:"w-full bg-gray-50 border border-gray-300 focus:border-blue-500 focus:ring-2 focus:ring-blue-200 rounded px-3 py-2 text-base text-gray-800 placeholder-gray-300 focus:outline-none transition-all duration-200 ease-in-out" %>
    </div>
      <div class="flex justify-center space-x-4 mt-4">
          <%= button_tag type: "submit", class: "px-4 py-2 bg-gray-300 text-gray-800 border border-gray-300 hover:bg-blue-700 hover:text-white hover:border-blue-700 hover:font-bold rounded-lg" do %>
            Salvar
          <% end %>
        <div class="px-4 py-2 bg-gray-300 text-gray-800 flex flex-row border-gray-300 hover:text-white hover:bg-blue-700 hover:font-bold rounded rounded-lg">
          <%= link_to "Voltar", :back %>
        </div>
      </div>
  <% end %>
</div>  